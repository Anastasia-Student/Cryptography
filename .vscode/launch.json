{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Launch with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/your_executable", // Path to your executable
            "args": [], // Optional command-line arguments
            "stopAtEntry": false, // Set to true to stop at the entry point
            "cwd": "${workspaceFolder}", // Working directory
            "environment": [], // Optional environment variables
            "externalConsole": false, // Set to true to use an external console
            "MIMode": "gdb", // Debugger mode (gdb or lldb)
            "setupCommands": [ // Optional setup commands
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" // Task to run before launching (optional)
        }
    ]
}
